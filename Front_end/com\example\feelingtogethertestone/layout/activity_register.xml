<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_register"
    android:scaleType="centerInside">>

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:hint="Account"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rectangular1_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"></EditText>

    <EditText
        android:id="@+id/passward_edit"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:hint="Passward"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rectangular1_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"></EditText>
    <EditText
        android:id="@+id/pass_edit_1"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:hint="Reconfirm your Passward"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rectangular1_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"></EditText>
    <EditText
        android:id="@+id/email_edit"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:hint="Email"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rectangular1_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"></EditText>
    <Button
        android:id="@+id/regester2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register!"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangular1_shape"
        android:textColor="@color/white"
        />


</LinearLayout>